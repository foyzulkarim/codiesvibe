if ! npm run lint; then
    echo "âŒ Backend linting failed!"
    exit 1
fi

if ! npm run typecheck; then
    echo "âŒ Backend typecheck failed!"
    exit 1
fi

cd ..

echo "âœ… All pre-commit checks passed!"