# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/toolsearch
MONGODB_DB_NAME=toolsearch

# Qdrant Configuration
# For cloud Qdrant, use QDRANT_URL and QDRANT_API_KEY
# For local Qdrant, use QDRANT_HOST and QDRANT_PORT
QDRANT_URL=
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=tools

# Application Configuration
NODE_ENV=development
PORT=4003
LOG_LEVEL=info
ENABLE_CACHE=true
CACHE_TTL=3600

# CORS Configuration
# Development: Optional - Set specific development origins or leave unset to allow all
# Example: CORS_ORIGINS=http://localhost:3000,http://localhost:3001
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Production: REQUIRED - Set specific allowed origins (comma-separated)
# Application will fail to start without this in production
# Example: ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Security Configuration
# Enable/disable various security features (set to 'false' to disable)
ENABLE_VECTOR_VALIDATION=true
ENABLE_RATE_LIMITING=true
ENABLE_SECURITY_HEADERS=true

# MongoDB-Qdrant Sync Configuration
# ====================================

# Background Sync Worker
# Background worker that automatically syncs MongoDB changes to Qdrant
# Default: DISABLED (manual sync only via UI buttons)
# Set to 'true' to enable automatic background sync every 60 seconds
# Leave unset or set to 'false' for manual sync only
ENABLE_SYNC_WORKER=false

# Clerk Authentication Configuration
# Get your keys from: https://dashboard.clerk.com
# IMPORTANT: Use your actual keys from Clerk Dashboard!
CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key_here
CLERK_SECRET_KEY=sk_test_your_secret_key_here

# Frontend URL for authentication redirects
FRONTEND_URL=http://localhost:3000

# Enhanced Search Configuration
# Multi-vector search configuration
SEARCH_USE_MULTIVECTOR=true
MULTIVECTOR_MAX_RESULTS=20
VECTOR_TYPES=semantic,entities.categories,entities.functionality,entities.aliases,composites.toolType

# RRF configuration
SEARCH_RRF_K=60
SEARCH_SOURCE_WEIGHTS={"mongodb": 0.3, "qdrant": 0.7}
DEDUPE_THRESHOLD=0.8

# Context enrichment configuration
ENRICHMENT_TIMEOUT_MS=2000
MAX_ENTITY_COUNT=10

# Performance configuration
ENABLE_CACHE=true
CACHE_TTL=3600

# Search Score Threshold Configuration
SEARCH_SCORE_THRESHOLD=0.5
QUERY_EXECUTOR_SCORE_THRESHOLD=0.5
QUERY_EXECUTOR_HIGH_THRESHOLD=0.7


TOGETHER_AI_API_KEY=123456789abcdef
TOGETHER_API_KEY=123456789abcdef

# Logging Configuration
LOG_LEVEL=info
LOGGLY_ENABLED=false
LOGGLY_TOKEN=your-loggly-customer-token
LOGGLY_SUBDOMAIN=self18
LOG_FORMAT=json


CLERK_PUBLISHABLE_KEY=pk_add_your_publishable_key_here
CLERK_SECRET_KEY=sk_add_your_secret_key_here
