# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/toolsearch
MONGODB_DB_NAME=toolsearch

# Qdrant Configuration
# For cloud Qdrant, use QDRANT_URL and QDRANT_API_KEY
# For local Qdrant, use QDRANT_HOST and QDRANT_PORT
QDRANT_URL=
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_API_KEY=
QDRANT_COLLECTION_NAME=tools

# Application Configuration
NODE_ENV=development
PORT=4003
LOG_LEVEL=info
ENABLE_CACHE=true
CACHE_TTL=3600

# CORS Configuration
# Development: Allow all origins (set to 'true' or specific origins)
# Production: Set specific allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Security Configuration
# Enable/disable various security features (set to 'false' to disable)
ENABLE_VECTOR_VALIDATION=true
ENABLE_RATE_LIMITING=true
ENABLE_SECURITY_HEADERS=true

# JWT Authentication Configuration
# IMPORTANT: Change these in production!
JWT_SECRET=your-super-secret-jwt-key-change-in-production-min-32-chars
JWT_ACCESS_EXPIRY=24h
JWT_REFRESH_EXPIRY=7d
JWT_ACCESS_EXPIRY_MS=86400000
JWT_REFRESH_EXPIRY_MS=604800000

# OAuth Configuration
# Frontend URL for OAuth redirects
FRONTEND_URL=http://localhost:3000

# GitHub OAuth
# Create an OAuth app at: https://github.com/settings/developers
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_CALLBACK_URL=http://localhost:4003/api/auth/oauth/github/callback

# Google OAuth
# Create credentials at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:4003/api/auth/oauth/google/callback

# Enhanced Search Configuration
# Multi-vector search configuration
SEARCH_USE_MULTIVECTOR=true
MULTIVECTOR_MAX_RESULTS=20
VECTOR_TYPES=semantic,entities.categories,entities.functionality,entities.aliases,composites.toolType

# RRF configuration
SEARCH_RRF_K=60
SEARCH_SOURCE_WEIGHTS={"mongodb": 0.3, "qdrant": 0.7}
DEDUPE_THRESHOLD=0.8

# Context enrichment configuration
ENRICHMENT_TIMEOUT_MS=2000
MAX_ENTITY_COUNT=10

# Performance configuration
ENABLE_CACHE=true
CACHE_TTL=3600

# Search Score Threshold Configuration
SEARCH_SCORE_THRESHOLD=0.5
QUERY_EXECUTOR_SCORE_THRESHOLD=0.5
QUERY_EXECUTOR_HIGH_THRESHOLD=0.7


TOGETHER_AI_API_KEY=123456789abcdef
TOGETHER_API_KEY=123456789abcdef

# Logging Configuration
LOG_LEVEL=info
LOGGLY_ENABLED=false
LOGGLY_TOKEN=your-loggly-customer-token
LOGGLY_SUBDOMAIN=self18
LOG_FORMAT=json
