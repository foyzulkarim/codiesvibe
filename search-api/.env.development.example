# Development Environment Configuration
NODE_ENV=development
PORT=4003

# CORS Configuration - Development (Open Access)
# Allow all origins for local development
CORS_ORIGINS=true

# Alternative: Allow specific development origins only
# CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000

# Security Configuration - Development
# Security features can be relaxed for easier development
ENABLE_SECURITY_HEADERS=true
ENABLE_RATE_LIMITING=true

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/toolsearch
MONGODB_DB_NAME=toolsearch

# Qdrant Configuration
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=tools

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama2
OLLAMA_EMBEDDING_MODEL=mxbai-embed-large

# Application Configuration
LOG_LEVEL=debug
ENABLE_CACHE=true
CACHE_TTL=3600