# Production Environment Configuration
NODE_ENV=production
PORT=4003

# CORS Configuration - Production (Restricted Access)
# Only allow requests from specific domains
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,https://app.yourdomain.com

# Security Configuration - Production (High Security)
# All security features should be enabled in production
ENABLE_SECURITY_HEADERS=true
ENABLE_RATE_LIMITING=true

# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/toolsearch?retryWrites=true&w=majority
MONGODB_DB_NAME=toolsearch

# Qdrant Configuration (Cloud)
QDRANT_URL=https://your-cluster.cloud.qdrant.io:6333
QDRANT_API_KEY=your-qdrant-api-key
QDRANT_COLLECTION_NAME=tools

# Ollama Configuration (Production)
OLLAMA_BASE_URL=http://ollama-service:11434
OLLAMA_MODEL=llama2
OLLAMA_EMBEDDING_MODEL=mxbai-embed-large

# Application Configuration
LOG_LEVEL=info
ENABLE_CACHE=true
CACHE_TTL=3600

# Enhanced Search Configuration
SEARCH_USE_MULTIVECTOR=true
SEARCH_SCORE_THRESHOLD=0.5
ENABLE_VECTOR_VALIDATION=true