# CodiesVibe Development Environment Configuration
# Copy this file to .env.dev and update with your development credentials

# Infrastructure Service Credentials (Development)
MONGODB_URI=mongodb://admin:password123@mongodb:27017/codiesvibe?authSource=admin
REDIS_URL=redis://:redis123@redis:6379

# Application Configuration (Development)
NODE_ENV=development
PORT=4001

# GitHub OAuth (Development - use your dev app)
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_CALLBACK_URL=http://localhost:4000/api/auth/github/callback

# Security (Development - change for production)
JWT_SECRET=development-jwt-secret-change-in-production
COOKIE_SECRET=development-cookie-secret-min-32-chars
CSRF_SECRET=development-csrf-secret-min-32-chars

# CORS Configuration (Development)
CORS_ORIGIN=http://localhost:3000

# Rate Limiting (Development - more permissive)
RATE_LIMIT_WINDOW=900000  # 15 minutes
RATE_LIMIT_MAX=1000       # Higher limit for development

# Ollama Configuration (Development)
OLLAMA_BASE_URL=http://host.docker.internal:11434
OLLAMA_MODEL=llama3.2

# MCP Server Configuration (Development)
MCP_SERVER_URL=http://localhost:3001

# Logging Configuration (Development)
LOG_LEVEL=debug

# Build Configuration
BUILD_DATE=$(date -u +'%Y-%m-%dT%H:%M:%SZ')
GIT_COMMIT=$(git rev-parse --short HEAD)
VERSION=development

# Frontend Build Configuration (Development)
VITE_API_URL=http://localhost:4000/api
VITE_APP_VERSION=development
VITE_BUILD_DATE=$(date -u +'%Y-%m-%dT%H:%M:%SZ')
VITE_GIT_COMMIT=$(git rev-parse --short HEAD)