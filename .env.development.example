# Frontend Development Environment Variables for CodiesVibe
# Copy this file to .env.development for development-specific settings
# This file is safe to commit to git (contains no secrets)

# =============================================================================
# API Configuration - Development
# =============================================================================
# Backend API URL for local development
VITE_API_URL=http://localhost:4000/api

# =============================================================================
# Development Features
# =============================================================================
# Enable debug mode and verbose logging
VITE_DEBUG=true

# Flag to indicate local development environment
VITE_LOCAL_DEV=true

# Enable development tools and features
VITE_DEV_TOOLS=true

# =============================================================================
# Application Metadata - Development
# =============================================================================
# Application name displayed in the UI
VITE_APP_NAME=CodiesVibe (Dev)

# Application version for development
VITE_APP_VERSION=development

# Environment identifier
VITE_ENVIRONMENT=development

# =============================================================================
# Hot Module Replacement (HMR) Configuration
# =============================================================================
# HMR host for development (localhost for native, 0.0.0.0 for Docker)
VITE_HMR_HOST=localhost

# HMR port for development server
VITE_HMR_PORT=5173

# =============================================================================
# Development-Specific Features
# =============================================================================
# Enable React DevTools and other development aids
VITE_REACT_DEVTOOLS=true

# Enable source maps for debugging
VITE_SOURCE_MAPS=true

# Mock API responses (set to true to use mock data instead of real API)
VITE_USE_MOCK_API=false

# =============================================================================
# Build Information (Auto-populated during build)
# =============================================================================
# Build timestamp (set automatically during build process)
# VITE_BUILD_DATE=

# Git commit hash (set automatically during build process)  
# VITE_GIT_COMMIT=

# =============================================================================
# Notes
# =============================================================================
# - This file is specifically for development environment
# - Copy to .env.development to use with `npm run dev`
# - For production settings, see .env.production.example
# - Backend variables go in backend/.env (see backend/.env.example)