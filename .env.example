# Environment Variables Example for CodiesVibe
# Copy this file to .env.local for development or .env.production for production
# Fill in the appropriate values for your environment

# =============================================================================
# Frontend Configuration (Vite)
# =============================================================================

# API Configuration
VITE_API_URL=http://localhost:4000/api
VITE_SEARCH_API_URL=http://localhost:4003/api
VITE_API_TIMEOUT=10000
VITE_ENABLE_CREDENTIALS=false

# Search Configuration
VITE_SEARCH_DEBOUNCE_DELAY=300
VITE_SEARCH_MIN_LENGTH=2
VITE_SEARCH_DEFAULT_LIMIT=20

# React Query Configuration
VITE_QUERY_STALE_TIME=300000
VITE_QUERY_CACHE_TIME=600000
VITE_QUERY_RETRY_COUNT=3

# Features & Development Tools
VITE_ENABLE_DEVTOOLS=true
VITE_ENABLE_REQUEST_LOGGING=true
VITE_DEBUG=true

# Clerk Authentication
# Get your keys from: https://dashboard.clerk.com
# IMPORTANT: Use your actual Clerk Publishable Key here
VITE_CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key_here

# Application Metadata
VITE_APP_NAME=CodiesVibe
VITE_ENVIRONMENT=development
VITE_APP_VERSION=local-dev

# =============================================================================
# Backend Configuration (if running backend locally)
# =============================================================================

# Server
NODE_ENV=development
PORT=4000

# Database
MONGODB_URI=mongodb://localhost:27017/codiesvibe

# Clerk Authentication (Backend)
# Get your secret key from: https://dashboard.clerk.com
CLERK_SECRET_KEY=sk_test_your_secret_key_here

# CORS
CORS_ORIGIN=http://localhost:3000

# =============================================================================
# Search API Configuration (if running search-api locally)
# =============================================================================

# Search API Server
SEARCH_PORT=4003
SEARCH_NODE_ENV=development

# MongoDB for Search
MONGODB_DB_NAME=codiesvibe

# Qdrant Vector Database
QDRANT_URL=http://localhost:6333
QDRANT_HOST=localhost
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=tools

# LLM Configuration (Together AI or others)
TOGETHER_API_KEY=your-together-ai-api-key

# Search Settings
SEARCH_SCORE_THRESHOLD=0.5
ENABLE_CACHE=true
CACHE_TTL=3600

# Logging
LOG_LEVEL=debug
