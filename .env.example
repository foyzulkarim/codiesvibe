# Frontend Environment Variables for CodiesVibe
# Copy this file to .env and fill in your actual values for local development
# This file is safe to commit to git (contains no secrets)

# =============================================================================
# API Configuration
# =============================================================================
# Backend API URL - adjust based on your backend setup
VITE_API_URL=http://localhost:4000/api

# =============================================================================
# Development Configuration
# =============================================================================
# Enable debug mode for development
VITE_DEBUG=true

# Flag to indicate local development environment
VITE_LOCAL_DEV=true

# =============================================================================
# Application Metadata
# =============================================================================
# Application name displayed in the UI
VITE_APP_NAME=CodiesVibe

# Application version (usually set automatically during build)
VITE_APP_VERSION=development

# Environment identifier
VITE_ENVIRONMENT=development

# =============================================================================
# Hot Module Replacement (HMR) Configuration
# =============================================================================
# HMR host for Docker development (usually 0.0.0.0 for containers)
VITE_HMR_HOST=localhost

# HMR port for development server
VITE_HMR_PORT=5173

# =============================================================================
# Build Information (Auto-populated during build)
# =============================================================================
# Build timestamp (set automatically during build process)
# VITE_BUILD_DATE=

# Git commit hash (set automatically during build process)  
# VITE_GIT_COMMIT=

# =============================================================================
# Notes
# =============================================================================
# - VITE_ prefixed variables are embedded at build time and available in the browser
# - For production, copy this to .env.production and update values accordingly
# - Backend-specific variables should go in backend/.env (see backend/.env.example)
# - Docker override variables can be set in docker-compose.override.yml