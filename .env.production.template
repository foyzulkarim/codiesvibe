# Production Environment Template for CodiesVibe
# Copy this file to .env.production and fill in your actual values
# NEVER commit .env.production to git! It contains sensitive secrets.

# =============================================================================
# Frontend Build Variables (Vite)
# =============================================================================
VITE_API_URL=https://api.codiesvibe.com/api
VITE_ENVIRONMENT=production
VITE_DEBUG=false
VITE_DEV_TOOLS=false
VITE_APP_NAME=CodiesVibe
VITE_APP_VERSION=production

# Optional Frontend Features (uncomment if needed)
# VITE_REACT_DEVTOOLS=false
# VITE_SOURCE_MAPS=false
# VITE_USE_MOCK_API=false
# VITE_LOCAL_DEV=false

# =============================================================================
# Backend Configuration
# =============================================================================
NODE_ENV=production
PORT=4000
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/codiesvibe?retryWrites=true&w=majority
JWT_SECRET=your-super-secure-jwt-secret-minimum-32-characters-long
JWT_EXPIRES_IN=24h
CORS_ORIGIN=https://codiesvibe.com,https://api.codiesvibe.com
ALLOWED_DOMAINS=codiesvibe.com,www.codiesvibe.com,app.codiesvibe.com

# =============================================================================
# Search API Configuration
# =============================================================================
PORT=4003
NODE_ENV=production
MONGODB_DB_NAME=codiesvibe
QDRANT_URL=https://your-cluster-id.cloud.qdrant.io:6333
QDRANT_HOST=your-cluster-id.cloud.qdrant.io
QDRANT_PORT=6333
QDRANT_API_KEY=your-qdrant-api-key-here
QDRANT_COLLECTION_NAME=tools
TOGETHER_API_KEY=your-together-ai-api-key-here

# Security and CORS Configuration
CORS_ORIGINS=https://codiesvibe.com,https://api.codiesvibe.com
ENABLE_SECURITY_HEADERS=true
ENABLE_RATE_LIMITING=true
ENABLE_VECTOR_VALIDATION=false
ALLOWED_ORIGINS=https://codiesvibe.com,https://api.codiesvibe.com

# Search Configuration
SEARCH_SCORE_THRESHOLD=0.5
QUERY_EXECUTOR_SCORE_THRESHOLD=0.5
QUERY_EXECUTOR_HIGH_THRESHOLD=0.7

# Cache Configuration
ENABLE_CACHE=true
CACHE_TTL=3600

# Logging Configuration
LOG_LEVEL=info
LOGGLY_ENABLED=false
LOGGLY_TOKEN=your-loggly-token
LOGGLY_SUBDOMAIN=self18

# =============================================================================
# Docker Build Variables
# =============================================================================
BUILD_DATE=2024-01-01T00:00:00Z
GIT_COMMIT=abc123
VERSION=latest