# CodiesVibe Production Environment Variables
# Copy this file to .env.production and fill in your values
# DO NOT commit .env.production to version control!

# ============================================
# Docker Image Versions (optional, defaults to 'latest')
# ============================================
FRONTEND_VERSION=latest
SEARCH_API_VERSION=latest

# ============================================
# MongoDB Atlas Configuration
# ============================================
MONGODB_URI=mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority
MONGODB_DB_NAME=codiesvibe

# ============================================
# Qdrant Cloud Configuration
# ============================================
QDRANT_URL=https://<cluster-id>.qdrant.io
QDRANT_API_KEY=<your-qdrant-api-key>
QDRANT_HOST=<cluster-id>.qdrant.io
QDRANT_PORT=6333
QDRANT_COLLECTION_NAME=tools

# ============================================
# AI Service Configuration
# ============================================
TOGETHER_API_KEY=<your-together-api-key>

# ============================================
# Clerk Authentication (if used)
# ============================================
# CLERK_SECRET_KEY=sk_live_...
# CLERK_PUBLISHABLE_KEY=pk_live_...

# ============================================
# CORS Configuration
# ============================================
CORS_ORIGINS=https://codiesvibe.com,https://www.codiesvibe.com
ALLOWED_ORIGINS=https://codiesvibe.com,https://www.codiesvibe.com

# ============================================
# Security Settings
# ============================================
ENABLE_SECURITY_HEADERS=true
ENABLE_RATE_LIMITING=true
ENABLE_VECTOR_VALIDATION=true

# ============================================
# Search Configuration
# ============================================
SEARCH_USE_MULTIVECTOR=true
SEARCH_RRF_K=60
SEARCH_SOURCE_WEIGHTS={"title":0.3,"description":0.4,"features":0.3}
SEARCH_SCORE_THRESHOLD=0.5

# ============================================
# Performance & Logging
# ============================================
LOG_LEVEL=info
ENABLE_CACHE=true
CACHE_TTL=3600
